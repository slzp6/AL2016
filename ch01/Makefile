# CC = cc
# CC = clang
CC = gcc
CFLAGS = -Wall -Wno-unused-result -O2
# CFLAGS = -Wall -O2
LIBS = -lm

all: ex1-1 ex1-2 ex1-3 ex1-4 ex1-5 ex1-6 ex1-7 q1-1 q1-2 q1-3 

ex1-1: ex1-1.c
	$(CC) $(CFLAGS) ex1-1.c $(LIBS) -o ex1-1

ex1-2: ex1-2.c
	$(CC) $(CFLAGS) ex1-2.c $(LIBS) -o ex1-2

ex1-3: ex1-3.c
	$(CC) $(CFLAGS) ex1-3.c $(LIBS) -o ex1-3

ex1-4: ex1-4.c
	$(CC) $(CFLAGS) ex1-4.c $(LIBS) -o ex1-4

ex1-5: ex1-5.c
	$(CC) $(CFLAGS) ex1-5.c $(LIBS) -o ex1-5

ex1-6: ex1-6.c
	$(CC) $(CFLAGS) ex1-6.c $(LIBS) -o ex1-6

ex1-7: ex1-7.c
	$(CC) $(CFLAGS) ex1-7.c $(LIBS) -o ex1-7

q1-1: q1-1.c
	$(CC) $(CFLAGS) q1-1.c $(LIBS) -o q1-1

q1-2: q1-2.c
	$(CC) $(CFLAGS) q1-2.c $(LIBS) -o q1-2

q1-3: q1-3.c
	$(CC) $(CFLAGS) q1-3.c $(LIBS) -o q1-3

clean:
	rm -rf *~  ex1-1 ex1-2 ex1-3 ex1-4 ex1-5 ex1-6 ex1-7 q1-1 q1-2 q1-3 

